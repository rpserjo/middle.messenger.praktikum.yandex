<div class="my-10 input-wrapper{{#if icon}} with-icon{{/if}}">
    {{#if label}}
        <label
            {{#if id}}
                for="{{{id}}}"
            {{/if}}
        >
            {{{label}}}
        </label>
    {{/if}}
    {{#if icon}}
        {{{icon}}}
    {{/if}}
    <input
        {{#if id}}
            id="{{{id}}}"
        {{/if}}
        {{#if name}}
            name="{{{name}}}"
        {{/if}}
        {{#if placeholder}}
            placeholder="{{{placeholder}}}"
        {{/if}}
        {{#if type}}
            type="{{{type}}}"
        {{else}}
            type="text"
        {{/if}}
        {{#if value}}
            value="{{{value}}}"
        {{/if}}
    />
    
    	<p style="color: red">{{{validationError}}}</p>
    
    
</div>
