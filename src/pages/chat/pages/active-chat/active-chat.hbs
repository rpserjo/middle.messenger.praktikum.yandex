<div class="chat-header">
    <div class="chat-header__avatar">
        {{{ chatAvatar }}}
    </div>
    <div class="chat-header__title">
        {{{ chatTitle }}}
    </div>
    <div class="chat-header__options">
        {{{ optionsDropDown }}}
    </div>
</div>
<div class="chat" id="messages-list">
    {{#each chatMessagesList}}
        {{{ this }}}
    {{/each}}
</div>
<div class="chat-footer">
    <form>
        <div class="chat-attach">
            {{{ attachDropDown }}}
        </div>
        <div class="chat-message">
            {{{ chatSendMessage }}}
        </div>
        <div class="chat-send">
            {{{ sendIcon }}}
        </div>
    </form>
</div>
